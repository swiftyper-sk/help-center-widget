{
  "name": "help-center-widget",
  "description": "Publish help articles, FAQs, and guides. Allow customers to find answers on their own, reduce repetitive questions, and keep your support team to focus on more challenging issues.",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:app && npm run build:widget",
    "build:app": "tsc && vite build",
    "build:widget": "vite build --config vite.widget.config",
    "preview": "vite preview",
    "prettier": "prettier --write src widget",
    "lint": "eslint .",
    "manifest-fbts": "node node_modules/babel-plugin-fbt/dist/bin/manifest --src src",
    "collect-fbts": "node node_modules/babel-plugin-fbt/dist/bin/collectFbt.js --presets @babel/preset-typescript --pretty --manifest < .src_manifest.json > .source_strings.json",
    "fbt-all": "npm run manifest-fbts && npm run collect-fbts",
    "upload-fbts": "npm run fbt-all && npx fbt-sync --upload-phrases < .source_strings.json",
    "deploy-fbts": "npx fbt-sync --deploy --path=src/locales/translatedFbts.json --pretty",
    "fbt-sync": "npm run upload-fbts && npm run deploy-fbts"
  },
  "author": "Swiftyper <support@swiftyper.sk> (https://swiftyper.sk/)",
  "license": "MIT",
  "dependencies": {
    "@babel/preset-typescript": "^7.27.0",
    "babel-plugin-fbt": "^1.0.0",
    "babel-plugin-fbt-runtime": "^1.0.0",
    "classnames": "^2.5.1",
    "fbt": "^1.0.0",
    "fbt-sync": "^1.0.4",
    "graceful-fs": "^4.2.11",
    "lucide-react": "^0.344.0",
    "node-stdlib-browser": "^1.3.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.5.1",
    "swiftyper-node": "^1.0.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/fbt": "^1.0.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "prettier": "2.6.2",
    "tailwindcss": "^3.4.1",
    "terser": "^5.27.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "vite-plugin-node-stdlib-browser": "^0.2.1"
  }
}
